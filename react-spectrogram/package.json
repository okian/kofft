{
  "name": "react-spectrogram",
  "version": "1.0.0",
  "description": "Modern React TypeScript PWA Spectrogram with WebAssembly and WebGL",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "wasm:build": "cd wasm && wasm-pack build --target web --out-name react_spectrogram_wasm --out-dir ../src/wasm",
    "wasm:watch": "cd wasm && wasm-pack build --target web --out-name react_spectrogram_wasm --out-dir ../src/wasm --watch"
  },
  "keywords": [
    "spectrogram",
    "audio",
    "visualization",
    "pwa",
    "react",
    "typescript",
    "webassembly",
    "webgl"
  ],
  "author": "Kian Ostad",
  "license": "MIT",
  "dependencies": {
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.8.1",
    "react-use": "^17.4.0",
    "tailwind-merge": "^2.0.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^22.1.0",
    "jsdom-global": "^3.0.2",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^0.34.6"
  }
}
